@import'./variables.styl';

.btn
	text-align center
	border none
	background-color transparent
	cursor pointer
	transition all 0.5s
	&:hover
		background #FDFDFD
		color #A6ABAB
	&-round
		height 40px
		width 40px
		border-radius 50%
		border 1px solid #A6ABAB
		&:hover
			border-color $baseGreenColor
			color $baseGreenColor

	&-blue
		background-color $defaultBlueColor
		color #FFF
		border none
		&:hover
			color #FFF
			background-color lighten($defaultBlueColor, 25%)