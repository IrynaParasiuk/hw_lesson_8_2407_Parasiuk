@import'./variables.styl'

.content
	margin 30px 0
	.container
		border 2px solid red
		box-sizing border-box
	&-item
		box-sizing border-box
		padding 0 0.5rem $horisontalPadding

.site-preview
	width 100%
	height 100%;
	display flex
	flex-direction column
	justify-content flex-start
	background #FFF
	transition all 2s
	&:hover
		transform scale(1.1)

	&_description
		padding $verticalDesriptionPadding $horisontalPadding
		&_content
			font-weight 200
		&_row
			padding $verticalDesriptionPadding 0
		&_footer
			padding-top 1rem
			display flex
			justify-content space-between