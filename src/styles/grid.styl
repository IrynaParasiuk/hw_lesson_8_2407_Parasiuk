$xsMobile=575px;
$mobile=768px;
$tablets=992px;
$laptops=1200px;

.grid-container {
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
}

[class*='col-'] {
	box-sizing: border-box;
	flex-grow 0
	flex-shrink 0
}

.flex-grow {
	flex-grow: 1;
}

.flex-container > [class*='col-']:last-child {
	margin-right: auto;
}

$oneColSize = 8.333333%;
// Small mobile phones
@media screen and (max-width: $xsMobile)
	for colNumber in (1..12)
		.col-{colNumber}
			flex-basis colNumber*$oneColSize
		.col-offset-{colNumber}
			margin-left colNumber*$oneColSize

// MOBILE large(PHABLET)
@media screen and (min-width: $xsMobile) and (max-width: $mobile)
	for colNumber in (1..12)
		.col-sm-{colNumber}
			flex-basis colNumber*$oneColSize
		.col-offset-sm-{colNumber}
			margin-left colNumber*$oneColSize

// IPADS
@media screen and (min-width: $mobile - 1px) and (max-width: $tablets)
	for colNumber in (1..12)
		.col-md-{colNumber}
			flex-basis colNumber*$oneColSize
		.col-offset-md-{colNumber}
			margin-left colNumber*$oneColSize
// Laptops
@media screen and (min-width: $tablets - 1px) and (max-width: $laptops)
	for colNumber in (1..12)
		.col-lg-{colNumber}
			flex-basis colNumber*$oneColSize
		.col-offset-lg-{colNumber}
			margin-left colNumber*$oneColSize
// Desktops
@media screen and (min-width: $laptops + 1px)
	for colNumber in (1..12)
		.col-xl-{colNumber}
			flex-basis colNumber*$oneColSize

		.col-offset-xl-{colNumber}
			margin-left colNumber*$oneColSize
